<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_bg"
    android:orientation="vertical" >

    <com.ytmall.widget.TitleWidget
        android:id="@id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        showu:left_visibility="visible"
        showu:right_visibility="visible" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp" >

                <com.ytmall.widget.EditTextBar
                    android:id="@+id/et_adress_personname"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/login_input_selector"
                    android:hint="姓名"
                    android:inputType="textPersonName"
                    android:paddingLeft="80dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:text="收货人"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.ytmall.widget.EditTextBar
                    android:id="@+id/et_adress_cellphone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/login_input_selector"
                    android:hint="11位手机号码"
                    android:inputType="number"
                    android:paddingLeft="80dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:textSize="16sp"
                    android:text="手机号码" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.ytmall.widget.EditTextBar
                    android:id="@+id/et_adress_telephone"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/login_input_selector"
                    android:hint="固定电话号码"
                    android:inputType="number"
                    android:paddingLeft="80dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:text="固定电话"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_area"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:background="@drawable/white_bg"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:textSize="16sp"
                    android:text="地区信息" />

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="地址信息"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey_deep"
                android:orientation="horizontal" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                 <com.ytmall.widget.EditTextBar
                    android:id="@+id/et_adress_adress"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/login_input_selector"
                    android:hint="街道门牌信息"
                    android:inputType="text"
                    android:paddingLeft="80dp"
                    android:textSize="16sp"
                     />
 
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:text="详细地址"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_adress_postalcode"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:orientation="horizontal" >

                <com.ytmall.widget.EditTextBar
                    android:id="@+id/et_adress_postalcode"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/login_input_selector"
                    android:hint="邮政编码"
                    android:inputType="number"
                    android:paddingLeft="80dp"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="18dp"
                    android:text="邮政编码"

                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_emty"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/re_moadress_bot"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#404040"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cb_isDefault_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:button="@drawable/checkbox_selector" />

                <TextView
                    android:id="@+id/bt_default_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/cb_isDefault_adress"
                    android:gravity="center"
                    android:text="默认地址"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xlarge" />

                <TextView
                    android:id="@+id/bt_save_adress"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/grey_light"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xlarge" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>