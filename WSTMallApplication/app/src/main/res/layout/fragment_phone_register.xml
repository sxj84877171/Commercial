<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.ytmall.widget.TitleWidget
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="@string/app_name"
        showu:left_visibility="visible"
        showu:right_visibility="invisible" />
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <com.ytmall.widget.EditTextBar
        android:id="@+id/et_phone_num"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:background="@drawable/login_input_selector"
        android:hint="输入11位手机号码"
        android:textSize="14sp"
        android:inputType="number" />

    <Button
        android:id="@+id/bt_submit_num"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/app_bg"
        android:text="下一步"
        android:textColor="@color/white" />
</LinearLayout>

</LinearLayout>