<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:showu="http://schemas.android.com/apk/res-auto"
              android:id="@+id/scrollMoney"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg"
              android:orientation="vertical">

    <com.ytmall.widget.TitleWidget
        android:id="@id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        showu:left_visibility="visible"
        showu:right_visibility="visible"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_myjb"/>

                <TextView

                    android:id="@+id/txtMyMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="我的金额"
                    android:textColor="@color/nick_hint"
                    android:textSize="@dimen/txt_big_normal"/>

                <TextView
                    android:id="@+id/txtUseMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/center_bottom"
                    android:textSize="@dimen/txt_big"/>

                <TextView
                    android:id="@+id/txtLockMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/center_bottom"
                    android:textSize="@dimen/txt_big"/>

                <TextView
                    android:id="@+id/txtJinMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/center_bottom"
                    android:textSize="@dimen/txt_big"/>

                <TextView
                    android:id="@+id/txtLockJinMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/center_bottom"
                    android:textSize="@dimen/txt_big"/>

                <TextView
                    android:id="@+id/txtDistributMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/center_bottom"
                    android:textSize="@dimen/txt_big"/>

                <Button
                    android:id="@+id/btnTakeMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp"

                    android:background="@drawable/btn_login_bg"
                    android:text="提现"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_normal"/>

                <LinearLayout
                    android:id="@+id/llTakeCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的提现账户"
                        android:textColor="@color/edit_txt"
                        android:textSize="@dimen/txt_normal"/>

                    <TextView
                        android:id="@+id/txtAccountNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/edit_txt"
                        android:textSize="@dimen/txt_normal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个"
                        android:textColor="@color/edit_txt"
                        android:textSize="@dimen/txt_normal"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/arrow_right"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="首次提现步骤"
                        android:textColor="@color/myred"
                        android:textSize="@dimen/txt_normal"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textColor="@color/red"
                    android:text="首次提前步骤：\r\n1. 设置支付密码和绑定手机号码；\r\n2. 绑定您的微信钱包或银行卡；"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>