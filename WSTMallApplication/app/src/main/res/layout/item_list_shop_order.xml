<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:id="@+id/txtShopOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单编号："
            android:textSize="@dimen/txt_small_normal"
            android:textColor="@color/center_bottom"
            />
        <TextView
            android:id="@+id/txtShopStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_select"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/change_login_pwd_line"/>
    <com.ytmall.widget.ListViewForScroll
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listShopPro"
        android:layout_marginBottom="10dp"/>

</LinearLayout>