<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showu="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <com.ytmall.widget.TitleWidget
        android:id="@id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        showu:center_view_text=""
        showu:right_visibility="invisible" />

    <EditText
        android:id="@+id/etOringalPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white_bg"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="原支付密码"
        android:maxLength="6"
        android:textSize="@dimen/txt_normal"
        android:inputType="numberPassword"/>
    <EditText
        android:id="@+id/etNewPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white_bg"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="新支付密码"
        android:maxLength="6"
        android:textSize="@dimen/txt_normal"
        android:inputType="numberPassword"/>
    <EditText
        android:id="@+id/etConfrimPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_white_bg"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="确认支付密码"
        android:maxLength="6"
        android:textSize="@dimen/txt_normal"
        android:inputType="numberPassword"/>
    <Button
        android:id="@+id/btnChangePwdSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_login_bg"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_normal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/txtForgetPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/edit_txt"
        android:textSize="@dimen/txt_middle"
        android:text="忘记支付密码？"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/txt_select"
        android:textSize="@dimen/txt_normal"
        android:text="*注：建议绑定手机号码，方便找回支付密码。"/>


</LinearLayout>