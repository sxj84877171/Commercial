<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/layout_selecter" >

        <ImageView
            android:id="@+id/im_order_good_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_order_good_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/tv_order_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/myred"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_order_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_order_good_price"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/gray_deep_other"
                 />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line">
        
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp" >
        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/boder_yellow"
            android:text="去支付"
            android:padding="5dp"
            android:textColor="@color/myred"
            android:layout_marginLeft="16dp" 
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_cod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/boder_yellow"
            android:text="货到付款"
            android:padding="5dp"
            android:textColor="@color/myred"
            android:layout_marginLeft="16dp" 
            android:visibility="gone"/>
           <TextView
            android:id="@+id/tv_evalution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/boder_yellow"
            android:text="去评价"
            android:padding="5dp"
            android:textColor="@color/myred"
            android:layout_marginLeft="16dp" 
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_complain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_evalution"
            android:layout_centerVertical="true"
            android:background="@drawable/boder_yellow"
            android:text="投诉"
            android:padding="5dp"
            android:textColor="@color/myred"
            android:layout_marginLeft="16dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_order_good_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/myred"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/tv_order_good_bot_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_order_good_total_price"
            android:textColor="@color/gray_deep_other" />
    </RelativeLayout>

</LinearLayout>