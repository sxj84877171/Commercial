<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showu="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent">
    <com.ytmall.widget.TitleWidget
        android:id="@id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="忘记支付密码"
        showu:left_visibility="visible"
        showu:right_visibility="visible" />
    <LinearLayout
        android:id="@+id/llBD"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您绑定的手机号码为："
            android:textColor="@color/center_bottom"
            android:textSize="@dimen/txt_normal"/>
        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/center_bottom"
            android:textSize="@dimen/txt_normal"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llUnBd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入手机号"
            android:textSize="@dimen/txt_normal"
            android:padding="10dp"
            android:background="@drawable/round_white_bg"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/etForgetCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:hint="验证码"
            android:textSize="@dimen/txt_normal"
            android:inputType="number"
            android:background="@drawable/round_white_bg"/>
        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:text="发送验证码"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/txt_small_normal"
            android:background="@drawable/btn_login_bg"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnForgetSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_normal"
        android:text="确定"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:background="@drawable/btn_login_bg"/>

</LinearLayout>