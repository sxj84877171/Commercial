<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:showu="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/llRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.ytmall.widget.TitleWidget
        android:id="@id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="注册"
        showu:right_visibility="invisible" />
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_account"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_big_normal"/>
        <TextView
            android:id="@+id/txtFrom"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hint"
            android:text="@string/choose_account_hint"/>
        <ImageView
            android:id="@+id/imgArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_arrow_down"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/province_line_border"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_account"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_big_normal"/>
        <EditText
            android:id="@+id/etPhone"
            android:inputType="phone"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:maxLength="11"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="@string/login_account_hint"
            android:textSize="@dimen/txt_big_normal"
            android:textColorHint="@color/hint"/>
        <ImageButton
            android:id="@+id/imgPhoneDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:src="@drawable/icon_delete"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/province_line_border"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_pwd"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_big_normal"/>
        <EditText
            android:id="@+id/etPwd"
            android:password="true"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="@string/login_pwd_hint"
            android:textSize="@dimen/txt_big_normal"
            android:textColorHint="@color/hint"/>
        <ImageButton
            android:id="@+id/imgPwdDelete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:src="@drawable/icon_delete"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/province_line_border"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/white"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_big_normal"/>
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="@string/get_code_hint"
            android:textSize="@dimen/txt_big_normal"
            android:textColorHint="@color/hint"/>
        <Button
            android:id="@+id/btnGetCode"
            android:onClick="GetCode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/code_bg"
            android:text="@string/get_code"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/txt_middle_normal"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/province_line_border"/>
    <Button
        android:id="@+id/btnRigster"
        android:onClick="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_big"
        android:background="@drawable/btn_login_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"/>

</LinearLayout>