<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:showu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <com.ytmall.widget.TitleWidget
        android:id="@id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        showu:center_view_text="首页"
        showu:left_visibility="invisible"
        showu:right_visibility="invisible" />
    <LinearLayout
        android:id="@+id/llAddressHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <include layout="@layout/item_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/txt_info"/>

    </LinearLayout>
   <ListView
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:id="@+id/lv_adress"
       android:listSelector="@color/txt_info">
   </ListView>
</LinearLayout>
