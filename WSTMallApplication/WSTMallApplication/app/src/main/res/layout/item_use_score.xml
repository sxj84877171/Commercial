<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
<TextView
    android:id="@+id/tv_sore_detail"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:text="共5256个积分，本次可用 4000 个积分"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line"/>
    <RelativeLayout
        android:id="@+id/rl_use_sore"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/layout_selecter">
        <TextView
            android:id="@+id/tv_sore_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="积分可抵扣金额:"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_sore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥40"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/red"
            android:layout_toRightOf="@id/tv_sore_info"
            />
        <ImageView
            android:id="@+id/iv_if_use_sore"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_c_close"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</LinearLayout>
